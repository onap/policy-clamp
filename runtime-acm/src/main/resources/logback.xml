<configuration scan="true" scanPeriod="30 seconds" debug="false">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="org.onap.policy.clamp.acm.runtime.config.LoggingConsoleLayout">
                <timestampFormat>yyyy-MM-dd'T'HH:mm:ss.SSS+00:00</timestampFormat>
                <timestampFormatTimezoneId>${TIMEZONE}</timestampFormatTimezoneId>
                <staticParameters>version=1.2.0|service_id=${RUNTIME_NAME}|application_id=${RUNTIME_NAME}</staticParameters>
            </layout>
        </encoder>
    </appender>

    <appender name="AsyncStdOut" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="STDOUT" />
    </appender>

    <logger name="network" level="OFF" additivity="false">
        <appender-ref ref="AsyncStdOut" />
    </logger>

    <logger name="acm-network" level="INFO" additivity="false">
        <appender-ref ref="AsyncStdOut" />
    </logger>

    <root level="INFO">
        <appender-ref ref="AsyncStdOut" />
    </root>

</configuration>
